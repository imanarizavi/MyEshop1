@model IEnumerable<DataLayer.User>
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@(Html.Kendo().Grid(Model)
    .Name("Grid")
    .Columns(columns => {
        columns.Bound(p => p.UserID).Groupable(false);
        columns.Bound(p => p.UserName);
        columns.Bound(p => p.Email);
        columns.Bound(p => p.IsActive);
    })
    .Pageable()
    .Sortable()
    .Scrollable()
    .Filterable()
    .Groupable()
)